section.section
  .columns
    .column.is-2.is-offset-5
      = link "Apply Now!", to: candidate_path(@conn, :new), class: "button is-primary is-large"

section.section
  .columns.is-multiline
    = for candidate <- @candidates do
      .column.is-3
        a href="#{candidate_path(@conn, :show, candidate)}"
          .card
            .card-image
              figure.image.is-4by3
                img src="#{CrbNominee.Avatar.url({candidate.avatar, candidate}, :thumb)}"
            .card-content
              .media
                .media-left
                  figure.image.is-32x32
                    img src="https://twitter.com/#{candidate.twitter}/profile_image?size=original"
                .media-content
                  p.title.is-5= candidate.name
                  p.subtitle.is-6= "@#{candidate.twitter}"
              .content= "#{String.slice(candidate.bio, 0..100)}..."
